{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6", "es2017"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "*": ["./node_modules/*", "./types/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.js"
  ],
  "exclude": ["node_modules"]
}
